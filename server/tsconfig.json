{
    "compilerOptions": {
      "target": "ES6",                         
      "module": "commonjs",                     
      "declaration": true,                      
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                      
      "forceConsistentCasingInFileNames": true,  
      "experimentalDecorators": true,            
      "emitDecoratorMetadata": true,            
      "resolveJsonModule": true,                 
      "outDir": "./dist",                        
      "rootDir": "./src"                         
    },
    "include": [
      "src/**/*.ts"                             
    ],
    "exclude": [
      "node_modules"                           
    ]
  }
  